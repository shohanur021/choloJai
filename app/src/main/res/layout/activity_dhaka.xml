<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".dhaka">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Dhaka"
        android:background="#374AB3"
        android:textSize="25dp"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:textColor="#FBF7F7"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="20dp"
                android:paddingTop="2dp"
                android:text="Packages"
                android:textColor="#000000"
                android:textSize="20dp"

                />
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="187dp"
                android:layout_margin="5dp"
                android:layout_marginBottom="10dp"
                android:background="#368BB5"
                android:orientation="vertical"
                android:padding="5dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rajprasad Package"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        >
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Locations :  Lalbagh Fort + Ahsan Manzil + Jinjira Prasad + Rose Garden Palace + Baitul Mukarram Mosque"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        >
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Days : 2 days and 1 night"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        >
                    </TextView>
                    <TextView
                        android:id="@+id/rajprasad_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="cost : 4500 tk (Per Person) "
                        android:textSize="16dp"
                        android:textColor="@color/white"></TextView>

                <Button
                    android:id="@+id/rajprasad"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="169dp"
                    android:layout_marginTop="9dp"
                    android:text="BOOK NOW"
                    android:textSize="16dp"></Button>
                </LinearLayout>

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="187dp"
                android:layout_margin="5dp"
                android:layout_marginBottom="10dp"
                android:background="#EDE14F7D"
                android:orientation="vertical"
                android:padding="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Masti Package"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        >
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Locations : Jamuna Future Park + Aladin Park + Buriganga Eco-Park + Baldha Garden + Upside Down Gallery + Hatirjheel"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        >
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Days : 3 days and 2 nights"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        >
                    </TextView>
                    <TextView
                        android:id="@+id/masti_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="cost : 9500 tk (Per Person) "
                        android:textSize="16dp"
                        android:textColor="@color/white"></TextView>

                    <Button
                        android:id="@+id/masti"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="169dp"
                        android:layout_marginTop="8dp"
                        android:text="BOOK NOW"
                        android:textSize="16dp"></Button>
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="20dp"
                android:paddingTop="2dp"
                android:text="Choose as you wish"
                android:textColor="#000000"
                android:textSize="20dp"
                />

            <LinearLayout
                android:id="@+id/ramnaLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="5dp">

                <CheckBox
                    android:id="@+id/ramna"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="2dp"
                    android:text="Ramna Park"
                    android:textSize="20dp"
                    android:textStyle="bold">
                </CheckBox>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/ramna" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:textAlignment="textStart"
                        android:text="Ramna Park is a large park and recreation area situated at the heart of Dhaka.This forested park with pond near its center is one of the most beautiful areas in Dhaka."
                        />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/bashundharaLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="5dp"
                >

                <CheckBox
                    android:id="@+id/bashundhara"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="2dp"
                    android:text="Bashundhara City"
                    android:textSize="20dp"
                    android:textStyle="bold">
                </CheckBox>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/bashundhara" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:textAlignment="textStart"
                        android:text="Bashundhara City Shopping Complex hosts shops for fashionable clothing, shoes, accessories, jewelry and anything you would expect to find in a modern Western-style mall." />


                </LinearLayout>


            </LinearLayout>



            <LinearLayout
                android:id="@+id/fantasyLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="5dp"
                android:addStatesFromChildren="true"
                >

                <CheckBox
                    android:id="@+id/fantasy"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="2dp"
                    android:text="Fantasy Kingdom"
                    android:textSize="20dp"
                    android:textStyle="bold">
                </CheckBox>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/fantasy" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:textAlignment="textStart"
                        android:text="The Fantasy Kingdom Theme Park, commonly known as Fantasy Kingdom, is an entertainment complex in Dhaka.It has around 24 rides."
                        />
                </LinearLayout>
            </LinearLayout>




            <LinearLayout
                android:id="@+id/parliamentLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="5dp"
                android:addStatesFromChildren="true"
                >

                <CheckBox
                    android:id="@+id/parliament"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="2dp"
                    android:text="National Parliament House"
                    android:textSize="20dp"
                    android:textStyle="bold">
                </CheckBox>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/img4"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/parliament" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:textAlignment="textStart"
                        android:text="Jatiya Sangsad Bhaban or National Parliament House is the house of the Parliament of Bangladesh.the complex is one of the largest legislative complexes in the world."
                        />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/memorialLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="5dp"
                android:addStatesFromChildren="true"
                >

                <CheckBox
                    android:id="@+id/memorial"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="2dp"
                    android:text="National Martyrs Memorial "
                    android:textSize="20dp"
                    android:textStyle="bold">
                </CheckBox>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/img5"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/memorial" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:textAlignment="textStart"
                        android:text="National Martyrs' Memorial is the national monument of Bangladesh, set up in the memory of those who died in the Bangladesh War of Independence."
                        />
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:id="@+id/shaheedminarLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="5dp"
                android:addStatesFromChildren="true"
                >

                <CheckBox
                    android:id="@+id/shaheedminar"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="2dp"
                    android:text="Central Shaheed Minar"
                    android:textSize="20dp"
                    android:textStyle="bold">
                </CheckBox>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/img6"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/shaeedminar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:textAlignment="textStart"
                        android:text="The Shaheed Minar is a national monument in Dhaka, Bangladesh, established to commemorate those killed during the Bengali Language Movement demonstrations of 1952."
                        />
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:id="@+id/zooLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="5dp"
                android:addStatesFromChildren="true"
                >

                <CheckBox
                    android:id="@+id/zoo"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="2dp"
                    android:text="Bangladesh National Zoo "
                    android:textSize="20dp"
                    android:textStyle="bold">
                </CheckBox>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/img7"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/zoo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:textAlignment="textStart"
                        android:text="The Bangladesh National Zoo is home to more than 2,000 animals from 165 species and is a popular place to spend the day, both for Bangladeshis and international visitors."

                        />
                </LinearLayout>
            </LinearLayout>






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/next"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:text="Next"
                    android:layout_marginLeft="150dp"
                    android:background="@color/purple_200"
                    android:layout_marginBottom="10dp"
                    />



            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>