<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".golden_chittagong">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Golden Inn"
        android:background="#374AB3"
        android:textSize="25dp"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:textColor="#FBF7F7"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/long_beach"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                app:srcCompat="@drawable/goldeninn2"
                android:layout_margin="5dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:textAlignment="textStart"
                android:text="Featuring free WiFi throughout the property, Golden Inn Chattagram Ltd offers accommodation in Chittagong. Guests can enjoy the on-site restaurant.There is a 24-hour front desk and a concierge desk at the property.
"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="Types Of Room"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                />

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Single bed (2,860tk)"
                android:layout_marginLeft="7dp"
                android:textSize="16dp"
                android:scaleX="0.8"
                android:scaleY="0.8"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/minus_1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="50dp"
                    android:padding="2dp"
                    android:text="-"
                    android:textSize="15dp"

                    />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="0"
                    android:textColor="#2D6A2F"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    />

                <Button
                    android:id="@+id/plus_1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:padding="2dp"
                    android:text="+"
                    android:textSize="15dp"
                    />
            </LinearLayout>

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Superior Double Room (4,352tk)"
                android:textSize="16dp"
                android:scaleX="0.8"
                android:scaleY="0.8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/minus_2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="50dp"
                    android:padding="2dp"
                    android:text="-"
                    android:textSize="16dp"
                    />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="0"
                    android:textColor="#2D6A2F"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/plus_2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:padding="2dp"
                    android:text="+"
                    android:textSize="15dp"
                    />


            </LinearLayout>
            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Superior Twin Room (4,532tk)"
                android:layout_marginLeft="2dp"
                android:textSize="16dp"
                android:scaleX="0.8"
                android:scaleY="0.8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/minus_3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="50dp"
                    android:padding="2dp"
                    android:text="-"
                    android:textSize="16dp"
                    />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="0"
                    android:textColor="#2D6A2F"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/plus_3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:padding="2dp"
                    android:text="+"
                    android:textSize="15dp"
                    />


            </LinearLayout>
            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deluxe Suite (6,660tk)"
                android:textSize="16dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:layout_marginLeft="4dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/minus_4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="50dp"
                    android:padding="2dp"
                    android:text="-"
                    android:textSize="16dp"
                    />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="0"
                    android:textColor="#2D6A2F"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/plus_4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:padding="2dp"
                    android:text="+"
                    android:textSize="15dp"
                    />


            </LinearLayout>
            <Button
                android:id="@+id/ok1"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@color/teal_700"
                android:text="Ok"
                android:textColor="#FDFCFC"/>

        </LinearLayout>

    </ScrollView>



</LinearLayout>