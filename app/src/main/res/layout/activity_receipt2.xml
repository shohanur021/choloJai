<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".receipt2"
    android:background="@drawable/reciept"
    android:padding="8dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Receipt "
        android:textSize="40dp"
        android:paddingTop="20dp"
        android:textColor="#000000"
        android:paddingLeft="20dp"
        android:gravity="center"
        android:textStyle="italic"/>
    <TextView
        android:id="@+id/sview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="17dp"
        android:padding="8dp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:text="Total Person"
            android:textColor="#000000"
            android:textSize="20dp"
            android:padding="2dp"
            ></TextView>
        <TextView
            android:id="@+id/numPerson"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginLeft="80dp"
            android:background="#FFFFFF"
            android:padding="2dp"
            ></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="17dp"
        >
        <TextView
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:text="TK(Per Person)"
            android:textColor="#000000"
            android:textSize="20dp"
            android:padding="2dp"
            ></TextView>
        <TextView
            android:id="@+id/costPer"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginLeft="80dp"
            android:background="#FFFFFF"
            android:padding="2dp"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="17dp"
        >
        <TextView
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:text="Cost"
            android:textColor="#000000"
            android:textSize="21dp"
            android:padding="2dp"
            ></TextView>
        <TextView
            android:id="@+id/totalcost"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginLeft="80dp"
            android:background="#FFFFFF"
            android:padding="2dp"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="17dp"
        >
        <TextView
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:text="Total Cost (5% vat included)"
            android:textColor="#000000"
            android:textSize="21dp"
            android:textStyle="bold"
            android:padding="2dp"></TextView>

        <TextView
            android:id="@+id/totalcostVat"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginLeft="80dp"
            android:background="#FFFFFF"
            android:padding="2dp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/back"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_marginTop="100dp"
            android:background="#388FDC"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Cancel"
            android:textColor="#FDFCFC"
            android:layout_marginLeft="35dp"
            />
        <Button
            android:id="@+id/confirm"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_marginLeft="76dp"
            android:layout_marginTop="100dp"
            android:background="#388FDC"
            android:text="Confirm"
            android:textColor="#FDFCFC"
            android:textSize="18dp"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>