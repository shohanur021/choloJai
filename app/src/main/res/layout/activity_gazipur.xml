<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".gazipur">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Gazipur"
        android:background="#374AB3"
        android:textSize="25dp"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:textColor="#FBF7F7"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="20dp"
                android:paddingTop="2dp"
                android:text="Packages"
                android:textColor="#000000"
                android:textSize="20dp"

                />
        />
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="170dp"
                android:layout_margin="5dp"
                android:layout_marginBottom="10dp"
                android:background="#368BB5"
                android:orientation="vertical"
                android:padding="5dp">



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kuthibari Package"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        >
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Locations :  Baliadi Jamider Bari+ Shreefaltali Jamider Bari + Bhawal Rajbari  "
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        >
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Days : 2 days and 1 night"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        >
                    </TextView>
                    <TextView
                        android:id="@+id/kuthibari_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="cost : 3000tk (Per Person) "
                        android:textSize="16dp"
                        android:textColor="@color/white"></TextView>

                <Button
                    android:id="@+id/kuthibari"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="169dp"
                    android:layout_marginTop="9dp"
                    android:text="BOOK NOW"
                    android:textSize="16dp"></Button>
                </LinearLayout>

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="170dp"
                android:layout_margin="5dp"
                android:layout_marginBottom="10dp"
                android:background="#EDE14F7D"
                android:orientation="vertical"
                android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Humayan Package"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        >
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Locations : Nuhash Polli + Jol O Jongoler Kabbo + Arshinagar Holiday Resort + Belai Bil"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        >
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Days : 3 days and 2 nights"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        >
                    </TextView>
                    <TextView
                        android:id="@+id/humayan_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="cost : 7500tk (Per Person) "
                        android:textSize="16dp"
                        android:textColor="@color/white"></TextView>

                <Button
                    android:id="@+id/humayan"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="169dp"
                    android:layout_marginTop="8dp"
                    android:text="BOOK NOW"
                    android:textSize="16dp"></Button>
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="20dp"
                android:paddingTop="2dp"
                android:text="Choose as you wish"
                android:textColor="#000000"
                android:textSize="20dp"

                />

            <LinearLayout
                android:id="@+id/safariLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="5dp">

                <CheckBox
                    android:id="@+id/safari"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="2dp"
                    android:text="bangabandhu Safari Park"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </CheckBox>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/safari" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:textAlignment="textStart"

                        android:text="Bangabandhu Safari Park is one of the largest safari parks in the world and the largest in Asia.This safari park is home to 47 species of animals and birds out of which 28 specias are local."
                        />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/shamshanswariLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="5dp"

                >

                <CheckBox
                    android:id="@+id/shamshanswari"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="2dp"
                    android:text="Bhawal Raj Shamshanswari"
                    android:textSize="20dp"
                    android:textStyle="bold">
                </CheckBox>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/bhawal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:textAlignment="textStart"

                        android:text="This Bhawal Raj Shamshanswari is an important monument built by the bhawal king.This cemetry temple is built with six small temples adjacent to the cremation ground.  " />


                </LinearLayout>


            </LinearLayout>



            <LinearLayout
                android:id="@+id/nationalparkLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="5dp"

                >

                <CheckBox
                    android:id="@+id/nationalpark"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="2dp"
                    android:text="Bhawal National park"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </CheckBox>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/bhawalpark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:textAlignment="textStart"

                        android:text="Bhawal National Park is a nature reserve and the national park of Bangladesh.The wildlife in the park includes 13 mammals, 9 reptiles, 5 birds and 5 amphibians."
                        />

                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:id="@+id/ekdalaLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="5dp"

                >

                <CheckBox
                    android:id="@+id/ekdala"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="2dp"
                    android:text="Ekdala Fort"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </CheckBox>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/img4"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/ekdala" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:textAlignment="textStart"

                        android:text="Ekdala was a siege type of fort or damdama fort and is typical of the forts of Sultanate Bengal.This is a medieval mud fort."
                        />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/basecampLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="5dp"

                >

                <CheckBox
                    android:id="@+id/basecamp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="2dp"
                    android:text="The base camp bangladesh "
                    android:textSize="20dp"
                    android:textStyle="bold">

                </CheckBox>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/img5"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/camp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:textAlignment="textStart"

                        android:text="Basecamp is the first outdoor activity camp of the country, where one will find a wide array of exciting challenges based on outdoor activities, adventures, camping facilities, topped with exquisite cuisines and comfortable accommodations."
                        />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/nicolasLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="5dp"

                >

                <CheckBox
                    android:id="@+id/nicolas"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="2dp"
                    android:text="St. Nicolas Church "
                    android:textSize="20dp"
                    android:textStyle="bold">

                </CheckBox>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/img6"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/nicolas" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:textAlignment="textStart"

                        android:text="Saint Nicholas Church is the second oldest church in Bangladesh which was constructed by Portuguese traders in 17th century ."
                        />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/seagullresortLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="5dp"

                >

                <CheckBox
                    android:id="@+id/seagullresort"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="2dp"
                    android:text="Seagull Resort and picnic spot"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </CheckBox>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/img7"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/seagullresort" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:textAlignment="textStart"

                        android:text="Seagull Resort and Picnic Spot is nice place. It's a nice and welcoming environment. A lot of tree mak the place greener and beautiful."
                        />

                </LinearLayout>

            </LinearLayout>







            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/next"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:text="Next"
                    android:layout_marginLeft="150dp"
                    android:background="@color/purple_200"
                    android:layout_marginBottom="10dp"
                    />


            </LinearLayout>

        </LinearLayout>



    </ScrollView>


</LinearLayout>
