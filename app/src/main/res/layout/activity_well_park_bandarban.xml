<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".well_park_bandarban">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Hotel Plaza"
        android:background="#374AB3"
        android:textSize="25dp"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:textColor="#FBF7F7"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="280dp"
                app:srcCompat="@drawable/wellpark2"
                android:layout_margin="5dp"
                />
<!--            well_park_bandarban-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:text="Hotel Plaza features accommodation in BÄndarban. Among the facilities of this property are a restaurant, a 24-hour front desk and an ATM, along with free WiFi."
                android:textAlignment="textStart"
                android:textColor="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="Types Of Room"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                />

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Single bed (4,280tk)"
                android:layout_marginLeft="7dp"
                android:textSize="16dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/minus_1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="50dp"
                    android:padding="2dp"
                    android:text="-"
                    android:textSize="15dp"

                    />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="0"
                    android:textColor="#2D6A2F"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    />

                <Button
                    android:id="@+id/plus_1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:padding="2dp"
                    android:text="+"
                    android:textSize="15dp"
                    />
            </LinearLayout>

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Premium Double Room (5,370tk)"
                android:textSize="16dp"
                android:scaleX="0.8"
                android:scaleY="0.8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/minus_2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="50dp"
                    android:padding="2dp"
                    android:text="-"
                    android:textSize="16dp"
                    />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="0"
                    android:textColor="#2D6A2F"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/plus_2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:padding="2dp"
                    android:text="+"
                    android:textSize="15dp"
                    />


            </LinearLayout>
            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Premium Twin Room (5,475tk)"
                android:layout_marginLeft="2dp"
                android:textSize="16dp"
                android:scaleX="0.8"
                android:scaleY="0.8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/minus_3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="50dp"
                    android:padding="2dp"
                    android:text="-"
                    android:textSize="16dp"
                    />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="0"
                    android:textColor="#2D6A2F"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/plus_3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:padding="2dp"
                    android:text="+"
                    android:textSize="15dp"
                    />


            </LinearLayout>

            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:text="Crown Deluxe (6,820tk)"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/minus_4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="50dp"
                    android:padding="2dp"
                    android:text="-"
                    android:textSize="16dp"
                    />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="0"
                    android:textColor="#2D6A2F"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/plus_4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:padding="2dp"
                    android:text="+"
                    android:textSize="15dp"
                    />


            </LinearLayout>
            <Button
                android:id="@+id/ok1"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@color/teal_700"
                android:text="Ok"
                android:textColor="#FDFCFC"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>