<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".coxs_bazar">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Cox's Bazar"
        android:background="#374AB3"
        android:textSize="25dp"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:textColor="#FBF7F7"
        />
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="6dp"
                android:text="Packages"
                android:textColor="#000000"
                android:textSize="20dp"
                />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="170dp"
                android:layout_margin="5dp"
                android:layout_marginBottom="10dp"
                android:background="#368BB5"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bindas Package"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Locations :  Cox's Bazar Beach + Himcchori + Inani Beach + Maheshkhali"
                    android:textColor="@color/white"
                    android:textSize="16dp"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Days : 2 days and 1 night"
                    android:textColor="@color/white"
                    android:textSize="16dp"></TextView>

                <TextView
                    android:id="@+id/bindas_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cost : 4000 tk (Per Person) "
                    android:textColor="@color/white"
                    android:textSize="16dp"></TextView>

                <Button
                    android:id="@+id/bindas"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="169dp"
                    android:layout_marginTop="8dp"
                    android:text="BOOK NOW"
                    android:textSize="16dp"></Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="170dp"
                android:layout_margin="5dp"
                android:layout_marginBottom="10dp"
                android:background="#EDE14F7D"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nildoriya Package"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Locations : Saint Martin + Chera Dwip + Sonadia Island + Shah Porir Dwip + Nivrite Nishorgo Park"
                    android:textColor="@color/white"
                    android:textSize="16dp"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Days : 4 days and 3 nights"
                    android:textColor="@color/white"
                    android:textSize="16dp"></TextView>

                <TextView
                    android:id="@+id/nildoriya_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cost : 9000 tk (Per Person) "
                    android:textColor="@color/white"
                    android:textSize="16dp"></TextView>

                <Button
                    android:id="@+id/nildoriya"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="169dp"
                    android:layout_marginTop="8dp"
                    android:text="BOOK NOW"
                    android:textSize="16dp"></Button>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingLeft="15dp"
        android:paddingTop="2dp"
        android:layout_marginBottom="5dp"
        android:text="Choose as you wish"
        android:textColor="#000000"
        android:textSize="20dp"
        />



            <LinearLayout
                android:id="@+id/coxsbazarSeaLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="5dp">

                <CheckBox
                    android:id="@+id/coxsbazarSea"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="2dp"
                    android:text="Coxsbazar Sea Beach"
                    android:textSize="20dp"
                    android:textStyle="bold">
                </CheckBox>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/seabeach" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:textAlignment="textStart"
                        android:text="Cox's Bazar Beach, located at Cox's Bazar, Bangladesh, is the longest natural sea beach in the world.Kolatoli Point,Sugondha Point,Laboni Point are the parts of this beach."
                        />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/inaniLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="5dp"
                >

                <CheckBox
                    android:id="@+id/inani"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="2dp"
                    android:text="Inani Sea Beach"
                    android:textSize="20dp"
                    android:textStyle="bold">
                </CheckBox>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/inani" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:textAlignment="textStart"
                        android:text="Inani Beach,part of Cox's Bazar Beach.It has a lot of coral stones, which are very sharp. These coral stones look black and green, and they are found in summer or rainy seasons.

                        " />
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:id="@+id/himcchoriLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="5dp"
                android:addStatesFromChildren="true"
                >

                <CheckBox
                    android:id="@+id/himcchori"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="2dp"
                    android:text="Himcchori"
                    android:textSize="20dp"
                    android:textStyle="bold">
                </CheckBox>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/himcchoriee" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:textAlignment="textStart"
                        android:text="Himcchori is one of the most beautiful place in cox's bazar .Here have Hill fountain and have long beautiful ,road those have green tree.This is the place Where you can see the Sea and feel the height."
                        />
                </LinearLayout>
            </LinearLayout>




            <LinearLayout
                android:id="@+id/marineLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="5dp"
                android:addStatesFromChildren="true"
                >

                <CheckBox
                    android:id="@+id/marine"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="2dp"
                    android:text="Marine Drive"
                    android:textSize="20dp"
                    android:textStyle="bold">
                </CheckBox>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/img4"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/marine" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:textAlignment="textStart"
                        android:text="Marine Drive is an 80-kilometre-long road from Cox’s Bazar to Teknaf along the Bay of Bengal.It is the world’s longest marine drive."
                        />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ramuLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="5dp"
                android:addStatesFromChildren="true"
                >

                <CheckBox
                    android:id="@+id/ramu"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="2dp"
                    android:text="Ramu Buddhist Bihar"
                    android:textSize="20dp"
                    android:textStyle="bold">
                </CheckBox>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/img5"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/ramu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:textAlignment="textStart"
                        android:text="Ramu is  famous for Buddhist temple.Its the longest lying Buddha statue in the south Asia and the place is so calm and quiet you will find inner peace over there."
                        />
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:id="@+id/kutubdiaLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="5dp"
                android:addStatesFromChildren="true"
                >

                <CheckBox
                    android:id="@+id/kutubdia"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="2dp"
                    android:text="Kutubdia"
                    android:textSize="20dp"
                    android:textStyle="bold">
                </CheckBox>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/img6"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/kutubdiya" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:textAlignment="textStart"
                        android:text="Kutubdia Island is famous for The Light-House and all other mysterious creation and divine beauty.The scenery of Sun-set and Sun-rise are obviously eye-catching for all."
                        />
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:id="@+id/pathorLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="5dp"
                android:addStatesFromChildren="true"
                >

                <CheckBox
                    android:id="@+id/pathor"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="2dp"
                    android:text="Pathor Rani Beach"
                    android:textSize="20dp"
                    android:textStyle="bold">
                </CheckBox>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/img7"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/pathor_rani" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:textAlignment="textStart"
                        android:text="Pathor Rani is a Bangla word where 'pathor' means 'stone' and 'rani' means 'queen'.So many stones of different shapes are available in this beach.Thats the logic behind the name of this beach."

                        />
                </LinearLayout>
            </LinearLayout>






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/next"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:text="Next"
                    android:layout_marginLeft="150dp"
                    android:background="@color/purple_200"
                    android:layout_marginBottom="10dp"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>