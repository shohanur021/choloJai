<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".chittagong">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Chittagong"
        android:background="#374AB3"
        android:textSize="25dp"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:textColor="#FBF7F7"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="20dp"
                android:paddingTop="2dp"
                android:text="Packages"
                android:textColor="#000000"
                android:textSize="20dp"

                />
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="187dp"
                android:layout_margin="5dp"
                android:layout_marginBottom="10dp"
                android:background="#368BB5"
                android:orientation="vertical"
                android:padding="5dp">

            <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jolorashi Package"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        >
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Locations :  Chandranath Hill + Sitakunda Eco Park + Chalanda Giripath + GuliaKhali Sea Beach + Kumira Ghat + Jharjhori Waterfall"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        >
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Days : 4 days and 3 night"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        >
                    </TextView>
                    <TextView
                        android:id="@+id/jolorashi_cost"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="cost : 9000tk (Per Person) "
                        android:textSize="16dp"
                        android:textColor="@color/white"></TextView>

                <Button
                    android:id="@+id/jolorashi"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="169dp"
                    android:layout_marginTop="9dp"
                    android:text="BOOK NOW"
                    android:textSize="16dp">
                </Button>
                </LinearLayout>
            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="187dp"
                android:layout_margin="5dp"
                android:layout_marginBottom="10dp"
                android:background="#EDE14F7D"
                android:orientation="vertical"
                android:padding="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Anondo Package"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        >
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Locations : Patenga Sea Beach + Butterfly Park + Parki Sea Beach + Banshkhali Sea Beach + Khejurtala Sea Beach"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        >
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Days : 3 days and 2 nights"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        >
                    </TextView>
                    <TextView
                        android:id="@+id/anondo_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="cost : 7500tk (Per Person) "
                        android:textSize="16dp"
                        android:textColor="@color/white"></TextView>
                <Button
                    android:id="@+id/anondo"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="169dp"
                    android:layout_marginTop="8dp"
                    android:text="BOOK NOW"
                    android:textSize="16dp">

                </Button>
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="20dp"
                android:paddingTop="2dp"
                android:text="Choose as you wish"
                android:textColor="#000000"
                android:textSize="20dp"

                />

            <LinearLayout
                android:id="@+id/bashbariaLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="5dp">

                <CheckBox
                    android:id="@+id/bashbaria"

                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="2dp"
                    android:text="bashbaria Sea Beach"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </CheckBox>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/bashbaria" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:textAlignment="textStart"

                        android:text="The main attraction of this beach is that you can walk in the ocean more than half a kilometer. Here you can travel freely, you can get the beauty of nature."
                        />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/banshkhaliLayout"

                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="5dp"

                >

                <CheckBox
                    android:id="@+id/banshkhali"

                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="2dp"
                    android:text="Banshkhali Eco Park"
                    android:textSize="20dp"
                    android:textStyle="bold">
                </CheckBox>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/banshkhali" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:textAlignment="textStart"

                        android:text="A plant based eco park, good place for eco tourists.Thousands of tress and Natural lake is there in this park. A worthy visit for nature lovers. " />


                </LinearLayout>


            </LinearLayout>



            <LinearLayout
                android:id="@+id/sonaichhoriLayout"

                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="5dp"

                >

                <CheckBox
                    android:id="@+id/sonaichhori"

                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="2dp"
                    android:text="Sonaichhori Trail"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </CheckBox>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/trail" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:textAlignment="textStart"

                        android:text="Sonaichhori trail is full of wild and rocky. Large stones, such as a three-pointed stone, drag the adventures of Baduzzakumar, lovers of adventure, which are quite slippery in rains or rainy season."
                        />

                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:id="@+id/kodalaLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="5dp"

                >

                <CheckBox
                    android:id="@+id/kodala"

                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="2dp"
                    android:text="Kodala Tea Estate"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </CheckBox>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/img4"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/kodala" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:textAlignment="textStart"

                        android:text="Kodala Tea Garden is a tea plantation. It is one of the tops and first tea gardens in Bangladesh, which is rich in green hills and a natural paradise.."
                        />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/bawachhoraLayout"

                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="5dp"

                >

                <CheckBox
                    android:id="@+id/bawachhora"

                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="2dp"
                    android:text="Bawachhora Lake and Waterfalls "
                    android:textSize="20dp"
                    android:textStyle="bold">

                </CheckBox>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/img5"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/bawachhora" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:textAlignment="textStart"

                        android:text="Bawachhora lake and waterfall,the sound of rushing water is as sweet as an anklet.  The view of the endless lake of water falling from the high hills on both sides brings wonderful peace."
                        />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/khoiyachhoraLayout"

                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="5dp"

                >

                <CheckBox
                    android:id="@+id/khoiyachhora"

                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="2dp"
                    android:text="Khoiyachhora Waterfall"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </CheckBox>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/img6"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/khoiyachhora" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:textAlignment="textStart"

                        android:text="Khoiyachora waterfall and its corridor is one of the largest in this hilly belt. The Khoiyachora waterfall has a total of seven major waterfalls and many isolated steps."
                        />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/sandwipLayout"

                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="5dp"

                >

                <CheckBox
                    android:id="@+id/sandwip"

                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="2dp"
                    android:text="Sandwip"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </CheckBox>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/img7"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/sandwip" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:textAlignment="textStart"

                        android:text="Sandwip is an island along the southeastern coast of Bangladesh in the Chittagong District.It's a eyecatching place for nature lovers"
                        />

                </LinearLayout>

            </LinearLayout>







            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/next"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:text="Next"
                    android:layout_marginLeft="150dp"
                    android:background="@color/purple_200"
                    android:layout_marginBottom="10dp"
                    />


            </LinearLayout>

        </LinearLayout>



    </ScrollView>


</LinearLayout>
